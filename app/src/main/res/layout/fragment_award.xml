<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_blue">

    <ImageView
        android:id="@+id/award_icon"
        android:layout_width="115dp"
        android:layout_height="118dp"
        android:padding="10dp"
        android:src="@drawable/awards"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/award_name_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:textSize="15sp"
        app:layout_constraintStart_toEndOf="@+id/award_icon"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="AWARD NAME" />

    <TextView
        android:id="@+id/award_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:textSize="10sp"
        app:layout_constraintStart_toEndOf="@+id/award_icon"
        app:layout_constraintTop_toBottomOf="@+id/award_name_label"
        tools:text="AWARDS DESCRIPTION BODY GOES HERE " />

    <TextView
        android:id="@+id/award_date_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:textSize="10sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/award_description"
        tools:text="AWARD DATE" />

</androidx.constraintlayout.widget.ConstraintLayout>