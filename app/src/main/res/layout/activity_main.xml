<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_holder"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/food_icon"
        android:layout_width="100dp"
        android:layout_height="146dp"
        android:paddingBottom="50dp"
        android:src="@drawable/pineapple"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/food_tracker_icon3"
        android:layout_width="35dp"
        android:layout_height="40dp"
        android:src="@drawable/strawberry"
        app:layout_constraintStart_toEndOf="@+id/food_tracker_icon2"
        app:layout_constraintTop_toBottomOf="@+id/step_tracker_icon" />

    <ImageView
        android:id="@+id/food_tracker_icon2"
        android:layout_width="35dp"
        android:layout_height="40dp"
        android:src="@drawable/strawberry"
        app:layout_constraintStart_toEndOf="@+id/food_tracker_icon1"
        app:layout_constraintTop_toBottomOf="@+id/step_tracker_icon" />

    <ImageView
        android:id="@+id/food_tracker_icon1"
        android:layout_width="35dp"
        android:layout_height="40dp"
        android:src="@drawable/strawberry"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/step_tracker_icon" />

    <ImageView
        android:id="@+id/step_tracker_icon"
        android:layout_width="46dp"
        android:layout_height="46dp"
        android:background="@drawable/footprint"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/step_tracker_number"
        android:layout_width="wrap_content"
        android:layout_height="46dp"
        android:textAlignment="center"
        android:paddingLeft="20dp"
        android:textSize="30sp"
        app:layout_constraintStart_toEndOf="@id/step_tracker_icon"
        app:layout_constraintTop_toTopOf="parent"/>

    <Button
        android:id="@+id/awards_icon"
        android:layout_width="68dp"
        android:layout_height="68dp"
        android:layout_marginBottom="44dp"
        android:background="@drawable/awards"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/instructions_icon" />

    <Button
        android:id="@+id/instructions_icon"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_marginStart="12dp"
        android:layout_marginBottom="48dp"
        android:background="@drawable/question_mark"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/mochi"
        android:layout_width="390dp"
        android:layout_height="335dp"
        android:src="@drawable/green_mochi_happy"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.61" />

    <EditText
        android:id="@+id/mochi_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingRight="30dp"
        android:textColor="@color/blue"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Mochi Name"
        android:hint="Mochi Name" />

    <TextView
        android:id="@+id/mochi_age"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingRight="30dp"
        android:textColor="@color/blue"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mochi_name"
        tools:text="Mochi Age" />

</androidx.constraintlayout.widget.ConstraintLayout>